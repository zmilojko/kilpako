!!!
%html
  %head
    %title Kilpako
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body(role="document")
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          %button.navbar-toggle.collapsed(data-toggle="collapse" data-target=".navbar-collapse")
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href="/")Kilpako
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'Start an event!', new_event_path
            -if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle(data-toggle="dropdown" href="#")
                  Signed in as #{current_user.username}
                  %span.caret
                %ul.dropdown-menu(role="menu")
                  %li=link_to 'Profile', edit_user_registration_path
                  %li=link_to 'Sign out', destroy_user_session_path
            -else
              %li.dropdown
                %a.dropdown-toggle(data-toggle="dropdown" href="#")
                  Sign in/Register
                  %span.caret
                %ul.dropdown-menu(role="menu")
                  %li=link_to 'Sign in', new_user_session_path
                  %li=link_to 'Register', new_user_registration_path
    .container.theme-showcase(role="main")
      - if alert
        .alert.alert-danger{role: :alert}= alert    
      - if notice
        .alert.alert-info{role: :alert}= notice
      = yield

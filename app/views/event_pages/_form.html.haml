= form_for @event_page do |f|
  - if @event_page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event_page.errors.count, "error")} prohibited this event_page from being saved:"
      %ul
        - @event_page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :event
    = f.text_field :event
  .actions
    = f.submit 'Save'

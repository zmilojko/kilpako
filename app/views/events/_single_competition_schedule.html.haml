.row
  .col-md-12
    %strong= competition.name
.row
  .col-md-5
    %p= competition.description
  .col-md-3
    %span.badge= competition.competition_format.name
    -if competition.races.count == 1
      %span.badge= competition.races[0].race_format.name
  .col-md-4
    -if competition.races.count == 0
      %p= competition.period_formatted
    -if competition.races.count == 1
      %p= competition.races[0].time.to_s :short
  .col-md-12
    -if competition.races.count >= 2
      - competition.races.each do |race|
        .row
          .col-md-5.col-md-offset-3.col-xs-7
            =race.name
            %span.badge=race.race_format.name
          .col-md-3.col-xs-5
            =race.time.to_s :short
%hr.divider
